<%- include ('../partials/header'); -%>
<div class="container">

    <h1 style="text-align: center;">add a new comment to <%= pic.name%></h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/gallery/<%= pic._id %>/comments" method="post">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="text" name="comment[text]">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-large btn-block">submit</button>
            </div>
        </form>
        <a href="/gallery">back </a>
    </div>
</div>

