<div class="container">
    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <% pics.forEach (pic=>{ %>
        <div class="col-lg-3 col-md-6">
            <div class="img-thumbnail">
                <!-- style=" height: 400px; " -->
                <img class=" img-fluid " src=" <%= pic.image %>">
                <div class="caption">
                    <h4><%= pic.name %></h4>
                </div>
                <p>
                    <a href="/gallery/<%= pic._id %>" class="btn btn-primary">more info</a>
                </p>
            </div>
        </div>

        <% }) %>
